<Window
  x:Class="GlazeWM.Bar.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:GlazeWM.Bar"
  xmlns:components="clr-namespace:GlazeWM.Bar.Components"
  mc:Ignorable="d"
  WindowStyle="None"
  ResizeMode="NoResize"
  Title="GlazeWMBar"
  ShowInTaskbar="False"
  Width="800"
  Height="50"
  Background="{Binding Background}"
  FontFamily="{Binding FontFamily}"
  FontWeight="{Binding FontWeight}"
  FontSize="{Binding FontSize}"
  Opacity="{Binding Opacity}"
  AllowsTransparency="True"
  Topmost="False">
  <Border
    CornerRadius="{Binding CornerRadius}"
    BorderThickness="{Binding BorderWidth}"
    BorderBrush="{Binding BorderColor}">
    <Grid Margin="{Binding Padding}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <ItemsControl
        Grid.Column="0"
        ItemsSource="{Binding ComponentsLeft}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <components:ComponentPortal />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <ItemsControl
        Grid.Column="1"
        ItemsSource="{Binding ComponentsCenter}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <components:ComponentPortal />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <ItemsControl
        Grid.Column="2"
        HorizontalAlignment="Right"
        ItemsSource="{Binding ComponentsRight}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <components:ComponentPortal />
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </Grid>
  </Border>
</Window>
